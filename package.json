{
  "name": "pragmatic_programing",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nf start -j Procfile",
    "app": "browser-sync start --config bs-config.js",
    "app:webpack": "webpack-dev-server -d --progress --colors --display-error-details --hot --inline --config webpack.dev.js",
    "build": "npm-run-all build:*",
    "build:webpack": "webpack --config webpack.prod.js",
    "deploy:local": "now dev",
    "deploy": "now",
    "test": "npm-run-all test:unit",
    "test:unit": "cross-env NODE_ENV=test mocha --require @babel/register test/**/*.test.*",
    "test:integration": "cypress run",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm run test && cat ./coverage/lcov.info | codacy-coverage",
    "test:cypress": "cypress open",
    "lint": "eslint src/**/*.js --fix",
    "format": "prettier --write src/page/*.*",
    "watch": "npm-run-all watch:*",
    "watch:format": "watch 'npm-run-all format' ./src ",
    "watch:webpack": "webpack --watch",
    "watch:test": "watch 'npm-run-all test:unit' ./src ",
    "docs:start": "nf start -j docs/Procfile",
    "docs:asciidocs:local": "gradle livereload",
    "docs:asciidocs:proxy": "browser-sync start --config docs/bs-config.js",
    "docs:asciidocs:build": "gradle asciidoctor",
    "docs:asciidocs:watch": "watch 'npm-run-all docs:asciidocs:build' ./docs/src",
    "docs:slide:start": "nf start -j docs/slides/Procfile",
    "docs:slide:build": "marp docs/slides/PITCHME.md -o docs/slides/index.html",
    "docs:slide:proxy": "browser-sync start --config docs/slides/bs-config.js",
    "docs:slide:watch": "marp -s docs/slides",
    "docs:slide:preview": "marp -p -w docs/slides"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hiroshima-arc/pragmatic_programing.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hiroshima-arc/pragmatic_programing/issues"
  },
  "homepage": "https://github.com/hiroshima-arc/pragmatic_programing#readme",
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@marp-team/marp-cli": "^0.15.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "browser-sync": "^2.26.7",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "connect-browser-sync": "^2.1.0",
    "copy-webpack-plugin": "^5.0.5",
    "cpx": "^1.5.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.2.0",
    "cypress": "^3.7.0",
    "cypress-file-upload": "^3.5.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "fake-indexeddb": "^3.0.0",
    "foreman": "^3.0.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "jshint": "^2.10.3",
    "markdown-to-html": "0.0.13",
    "mini-css-extract-plugin": "^0.8.0",
    "mocha": "^6.2.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.4",
    "now": "^16.5.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
